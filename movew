#!/bin/sh
# move window to a predefined location

. $XDG_CONFIG_HOME/wm.conf

CUR=${2:-$(pfw)}
ROOT=$(lsw -r)
SW=$(wattr w $ROOT)
SH=$(wattr h $ROOT)

BW=$(wattr b $CUR)
W=$(wattr w $CUR)
H=$(wattr h $CUR)

case $1 in
	tl) X=$GAP Y=$((GAP + PANELHEIGHT)) ;;
	tr) X=$((SW - W - BW*2 - GAP)) Y=$((GAP + PANELHEIGHT)) ;;
	bl) X=$GAP Y=$((SH - H - BW*2 - GAP)) ;;
	br) X=$((SW - W - BW*2 - GAP)) Y=$((SH - H - BW*2 - GAP)) ;;
	cs) X=$(((SW - W)/2)) Y=$(((SH - H + PANELHEIGHT)/2)) ;;
	*) echo "no position specified" ;;
esac

wtp $X $Y $W $H $CUR
